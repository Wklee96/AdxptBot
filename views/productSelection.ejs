<div class="container">
    <div class="card">
        <fieldset class="form-group">
            <h6 align="center" class="card-header">
                <legend class="col-form-label col-sm-2 pt-0">
                    <%= product.productName %>
                    <br>
                    Please select your order!
                </legend>
            </h6>
            <div>
                <img src="<%= product.productImg %>" style="width:360px;height:360px;">
            </div>
            <div class="card-body">
                <div class="col-sm-10">
                    <% for (var i = 0; i < product.productTypes.length; i++) { %>
                    <div class="form-check">
                        <% if (package == i + 1) { %>
                        <input class="form-check-input" type="radio" name="howmany"
                            id="<%= product.productTypes[i].inputId %>" value="<%= product.productTypes[i].value %>"
                            checked>
                        <% } else { %>
                        <input class="form-check-input" type="radio" name="howmany"
                            id="<%= product.productTypes[i].inputId %>" value="<%= product.productTypes[i].value %>">
                        <% } %>
                        <label class="form-check-label" for="<%= product.productTypes[i].inputId %>">
                            <%= product.productTypes[i].text %>
                        </label>
                    </div>
                    <% } %>
                </div>
            </div>
        </fieldset>
        <div class="form-row">
            <div class="col">
                <h6 align="center">*To order more, leave a comment in the note section!</h6>
            </div>
        </div>
    </div>
</div>